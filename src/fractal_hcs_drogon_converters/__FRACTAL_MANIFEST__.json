{
  "manifest_version": "2",
  "task_list": [
    {
      "name": "Convert HCS Drogon Plate to OME-Zarr",
      "category": "Conversion",
      "modality": "HCS",
      "tags": [
        "Plate converter"
      ],
      "docs_info": "### Purpose\n- Convert a Drogon Plate to a OME-Zarr Plate.\n\n### Outputs\n- A OME-Zarr Plate.\n\n### Limitations\n- This task is tailored to a specific Drogon acquisition. It may not work on all Drogon acquisitions.\n- This converter requires additonal metadata to work properly. This metadata is not present in all Drogon acquisitions, and needs to be added manually.\n\nPurpose\nConvert a Leica LIF plate to a OME-Zarr Plate.\nOutputs\nA OME-Zarr Plate.\nLimitations\nThis task has been tested on a limited set of acquisitions. It may not work on all Leica LIF acquisitions.\nThis converter is does not support images exported in auto-saved mode.",
      "executable_non_parallel": "convert_hcs_drogon_init_task.py",
      "executable_parallel": "convert_hcs_drogon_compute_task.py",
      "meta_non_parallel": {
        "cpus_per_task": 1,
        "mem": 4000
      },
      "meta_parallel": {
        "cpus_per_task": 1,
        "mem": 12000
      },
      "args_schema_non_parallel": {
        "$defs": {
          "AdvancedOptions": {
            "description": "Advanced options for the conversion.",
            "properties": {
              "num_levels": {
                "default": 5,
                "minimum": 1,
                "title": "Num Levels",
                "type": "integer"
              },
              "tiling_mode": {
                "default": "auto",
                "enum": [
                  "auto",
                  "grid",
                  "free",
                  "none"
                ],
                "title": "Tiling Mode",
                "type": "string"
              },
              "swap_xy": {
                "default": false,
                "title": "Swap Xy",
                "type": "boolean"
              },
              "invert_x": {
                "default": false,
                "title": "Invert X",
                "type": "boolean"
              },
              "invert_y": {
                "default": false,
                "title": "Invert Y",
                "type": "boolean"
              },
              "max_xy_chunk": {
                "default": 4096,
                "minimum": 1,
                "title": "Max Xy Chunk",
                "type": "integer"
              },
              "z_chunk": {
                "default": 10,
                "minimum": 1,
                "title": "Z Chunk",
                "type": "integer"
              },
              "c_chunk": {
                "default": 1,
                "minimum": 1,
                "title": "C Chunk",
                "type": "integer"
              },
              "t_chunk": {
                "default": 1,
                "minimum": 1,
                "title": "T Chunk",
                "type": "integer"
              }
            },
            "title": "AdvancedOptions",
            "type": "object"
          },
          "DrgonPlateInputModel": {
            "description": "Acquisition metadata.",
            "properties": {
              "path": {
                "title": "Path",
                "type": "string"
              },
              "plate_name": {
                "title": "Plate Name",
                "type": "string"
              },
              "acquisition_id": {
                "default": 0,
                "minimum": 0,
                "title": "Acquisition Id",
                "type": "integer"
              }
            },
            "required": [
              "path",
              "plate_name"
            ],
            "title": "DrgonPlateInputModel",
            "type": "object"
          }
        },
        "additionalProperties": false,
        "properties": {
          "zarr_urls": {
            "items": {
              "type": "string"
            },
            "title": "Zarr Urls",
            "type": "array",
            "description": "List of Zarr URLs."
          },
          "zarr_dir": {
            "title": "Zarr Dir",
            "type": "string",
            "description": "Directory to store the Zarr files."
          },
          "acquisitions": {
            "items": {
              "$ref": "#/$defs/DrgonPlateInputModel"
            },
            "title": "Acquisitions",
            "type": "array",
            "description": "List of raw acquisitions to convert to OME-Zarr."
          },
          "cellline_layout_path": {
            "title": "Cellline Layout Path",
            "type": "string",
            "description": "Path to the cell line layout csv file."
          },
          "pixel_size_um": {
            "default": 0.325,
            "title": "Pixel Size Um",
            "type": "number",
            "description": "Pixel size in micrometers."
          },
          "overwrite": {
            "default": false,
            "title": "Overwrite",
            "type": "boolean",
            "description": "Overwrite existing Zarr files."
          },
          "advanced_options": {
            "allOf": [
              {
                "$ref": "#/$defs/AdvancedOptions"
              }
            ],
            "default": {
              "num_levels": 5,
              "tiling_mode": "auto",
              "swap_xy": false,
              "invert_x": false,
              "invert_y": false,
              "max_xy_chunk": 4096,
              "z_chunk": 10,
              "c_chunk": 1,
              "t_chunk": 1
            },
            "title": "Advanced Options",
            "description": "Advanced options for the conversion."
          }
        },
        "required": [
          "zarr_urls",
          "zarr_dir",
          "acquisitions",
          "cellline_layout_path"
        ],
        "type": "object",
        "title": "ConvertHcsDrogonInitTask"
      },
      "args_schema_parallel": {
        "$defs": {
          "AdvancedComputeOptions": {
            "description": "Advanced options for the conversion.",
            "properties": {
              "num_levels": {
                "default": 5,
                "minimum": 1,
                "title": "Num Levels",
                "type": "integer"
              },
              "tiling_mode": {
                "default": "auto",
                "enum": [
                  "auto",
                  "grid",
                  "free",
                  "none"
                ],
                "title": "Tiling Mode",
                "type": "string"
              },
              "swap_xy": {
                "default": false,
                "title": "Swap Xy",
                "type": "boolean"
              },
              "invert_x": {
                "default": false,
                "title": "Invert X",
                "type": "boolean"
              },
              "invert_y": {
                "default": false,
                "title": "Invert Y",
                "type": "boolean"
              },
              "max_xy_chunk": {
                "default": 4096,
                "minimum": 1,
                "title": "Max Xy Chunk",
                "type": "integer"
              },
              "z_chunk": {
                "default": 10,
                "minimum": 1,
                "title": "Z Chunk",
                "type": "integer"
              },
              "c_chunk": {
                "default": 1,
                "minimum": 1,
                "title": "C Chunk",
                "type": "integer"
              },
              "t_chunk": {
                "default": 1,
                "minimum": 1,
                "title": "T Chunk",
                "type": "integer"
              }
            },
            "title": "AdvancedComputeOptions",
            "type": "object"
          },
          "ConvertParallelInitArgs": {
            "description": "Arguments for the compute task.",
            "properties": {
              "tiled_image_pickled_path": {
                "title": "Tiled Image Pickled Path",
                "type": "string"
              },
              "overwrite": {
                "title": "Overwrite",
                "type": "boolean"
              },
              "advanced_compute_options": {
                "$ref": "#/$defs/AdvancedComputeOptions",
                "title": "Advanced_Compute_Options"
              }
            },
            "required": [
              "tiled_image_pickled_path",
              "overwrite",
              "advanced_compute_options"
            ],
            "title": "ConvertParallelInitArgs",
            "type": "object"
          }
        },
        "additionalProperties": false,
        "properties": {
          "zarr_url": {
            "title": "Zarr Url",
            "type": "string",
            "description": "URL to the OME-Zarr file."
          },
          "init_args": {
            "$ref": "#/$defs/ConvertParallelInitArgs",
            "title": "Init Args",
            "description": "Arguments for the initialization task."
          }
        },
        "required": [
          "zarr_url",
          "init_args"
        ],
        "type": "object",
        "title": "ConvertHcsDrogonComputeTask"
      }
    }
  ],
  "has_args_schemas": true,
  "args_schema_version": "pydantic_v2",
  "authors": "Lorenzo Cerrone"
}
